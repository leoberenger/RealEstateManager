<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.openclassrooms.realestatemanager.controllers.activities.MainActivity"
    android:orientation="horizontal">

    <fragment
        android:id="@+id/activity_main_main_fragment"
        android:name="com.openclassrooms.realestatemanager.controllers.fragments.MainFragment"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="match_parent"/>

    <fragment
        android:id="@+id/activity_main_detail_fragment"
        android:name="com.openclassrooms.realestatemanager.controllers.fragments.DetailFragment"
        android:layout_width="0dp"
        android:layout_weight="7"
        android:layout_height="match_parent"/>

